<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="dashboardpg" prefHeight="791.0" prefWidth="1522.0" style="-fx-background-color: white; -fx-background-radius: 90;" stylesheets="@../styles/dashboard.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dinidu.lk.pmt.controller.DashboardViewController">
   <children>
      <!-- Header Bar -->
      <AnchorPane layoutX="-14.0" prefHeight="103.0" prefWidth="1534.0" styleClass="header-bar">
         <children>
            <!-- Logo -->
            <ImageView fitHeight="89.0" fitWidth="96.0" layoutX="14.0" layoutY="7.0" onMouseClicked="#mainIconOnClick" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
               <image>
                  <Image url="@../asserts/icons/PN.png" />
               </image>
            </ImageView>
            <!-- Project Title -->
            <Label layoutX="104.0" layoutY="34.0" styleClass="nav-label" text="Project Nexus" />
            <!-- Settings Icon -->
            <ImageView fx:id="settingClick" fitHeight="26.0" fitWidth="32.0" layoutX="1415.0" layoutY="43.0" onMouseClicked="#settingsClick" pickOnBounds="true" preserveRatio="true" styleClass="icon-hover">
               <image>
                  <Image url="@../asserts/icons/setting.png" />
               </image>
            </ImageView>
            <!-- Notifications Icon -->
            <ImageView fx:id="bellClick" fitHeight="26.0" fitWidth="32.0" layoutX="1361.0" layoutY="43.0" onMouseClicked="#notifyClick" pickOnBounds="true" preserveRatio="true" styleClass="icon-hover">
               <image>
                  <Image url="@../asserts/icons/bell.png" />
               </image>
            </ImageView>
            <!-- Navigation Buttons -->
            <ButtonBar layoutX="327.0" layoutY="31.0" prefHeight="50.0" prefWidth="954.0">
               <buttons>
                  <Button onAction="#clickOnProjects" styleClass="nav-button" text="Projects" />
                  <Button onAction="#clickOnTimesheets" styleClass="nav-button" text="Timesheets" />
                  <Button onAction="#clickOnTask" styleClass="nav-button" text="Tasks" />
                  <Button onAction="#clickOnReports" styleClass="nav-button" text="Reports" />
                  <Button onAction="#clickOnDashboard" styleClass="nav-button" text="Dashboards" />
               </buttons>
            </ButtonBar>
            <!-- Profile Icon -->
            <ImageView fx:id="profileClick" fitHeight="71.0" fitWidth="51.0" layoutX="1470.0" layoutY="24.0" onMouseClicked="#myProfile" pickOnBounds="true" preserveRatio="true" styleClass="icon-hover">
               <image>
                  <Image url="@../asserts/icons/userProfile.jpg" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>

      <!-- Content Pane for Dynamic Views -->
      <AnchorPane fx:id="contentPane" layoutY="120.0" prefHeight="670.0" prefWidth="1522.0">
         <!-- This area will dynamically load other FXML content -->
      </AnchorPane>

      <!-- Card Containers (with fx:id for dynamic manipulation) -->
      <AnchorPane fx:id="card1" layoutX="34.0" layoutY="172.0" prefHeight="256.0" prefWidth="311.0" styleClass="card-container" />
      <AnchorPane fx:id="card2" layoutX="404.0" layoutY="172.0" prefHeight="256.0" prefWidth="311.0" styleClass="card-container" />
      <AnchorPane fx:id="card3" layoutX="34.0" layoutY="502.0" prefHeight="256.0" prefWidth="311.0" styleClass="card-container" />
      <AnchorPane fx:id="card4" layoutX="411.0" layoutY="502.0" prefHeight="256.0" prefWidth="311.0" styleClass="card-container" />
      <AnchorPane fx:id="card5" layoutX="794.0" layoutY="172.0" prefHeight="256.0" prefWidth="311.0" styleClass="card-container" />
      <AnchorPane fx:id="card6" layoutX="1164.0" layoutY="172.0" prefHeight="256.0" prefWidth="311.0" styleClass="card-container" />
      <AnchorPane fx:id="card7" layoutX="794.0" layoutY="502.0" prefHeight="256.0" prefWidth="311.0" styleClass="card-container" />
      <AnchorPane fx:id="card8" layoutX="1177.0" layoutY="502.0" prefHeight="256.0" prefWidth="311.0" styleClass="card-container" />
   </children>
</AnchorPane>
